<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" ><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate random numbers between " />

    <EditText
        android:id="@+id/random_gen_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" and " />

    <EditText
        android:id="@+id/random_gen_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" />
	<Button 
	    android:id="@+id/random_gen_cancel"
	    android:text="Cancel"
	    android:onClick="cancelHandler"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
	<Button 
	    android:id="@+id/random_gen_save"
	    android:text="Save"
	    android:onClick="saveHandler"
	  	android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
</LinearLayout>